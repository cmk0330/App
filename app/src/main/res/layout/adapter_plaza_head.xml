<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="16dp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="这是用户名"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints" />

    <com.cmk.app.widget.CircleView
        android:id="@+id/point1"
        android:layout_width="8dp"
        android:layout_height="8dp"
        android:layout_marginTop="16dp"
        app:circleColor="@color/blue"
        app:layout_constraintStart_toStartOf="@+id/tv_user"
        app:layout_constraintTop_toBottomOf="@+id/tv_user" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="16dp"
        android:text="你可以点击 分享文章 ，你可以分享任何一篇觉得不错的文章，每日首次分享加积分哟!"
        android:textColor="@color/text_gray"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/point1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/point1"
        app:layout_constraintTop_toTopOf="@+id/point1" />

    <com.cmk.app.widget.CircleView
        android:id="@+id/point2"
        android:layout_width="8dp"
        android:layout_height="8dp"
        android:layout_marginTop="16dp"
        app:circleColor="@color/blue"
        app:layout_constraintStart_toStartOf="@+id/point1"
        app:layout_constraintTop_toBottomOf="@+id/textView1" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:text="目前争取福利 极客时间新 199 礼包，每个人都能再领一次。。"
        android:textColor="@color/text_gray"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/point2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/point2"
        app:layout_constraintTop_toTopOf="@+id/point2" />

    <com.cmk.app.widget.CircleView
        android:id="@+id/point3"
        android:layout_width="8dp"
        android:layout_height="8dp"
        android:layout_marginTop="16dp"
        app:circleColor="@color/blue"
        app:layout_constraintStart_toStartOf="@+id/point2"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:text="广场API已经完全开放： 点击直达。"
        android:textColor="@color/text_gray"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/point3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/point3"
        app:layout_constraintTop_toTopOf="@+id/point3" />

    <View
        android:id="@+id/view_line1"
        android:layout_width="0dp"
        android:layout_height="0.5dp"
        android:layout_marginTop="16dp"
        android:background="@color/line_gray"
        app:layout_constraintTop_toBottomOf="@id/textView3"
        tools:ignore="MissingConstraints" />

    <View
        android:id="@+id/view_line2"
        android:layout_width="0dp"
        android:layout_height="8dp"
        android:background="@color/light_gray"
        app:layout_constraintTop_toBottomOf="@+id/view_line1"
        tools:ignore="MissingConstraints" />

    <View
        android:id="@+id/view_line3"
        android:layout_width="0dp"
        android:layout_height="0.5dp"
        android:background="@color/line_gray"
        app:layout_constraintTop_toBottomOf="@+id/view_line2"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/tv_new_article"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="最新分享"
        android:textColor="@color/text_black"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view_line3" />

    <TextView
        android:id="@+id/tv_share_article"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:text="我要分享文章"
        android:textColor="@color/blue"
        android:textSize="18sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/tv_new_article"
        app:layout_constraintEnd_toEndOf="parent" />

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="16dp"
        android:background="@color/blue"
        app:layout_constraintTop_toBottomOf="@+id/tv_share_article" />
</androidx.constraintlayout.widget.ConstraintLayout>