<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <TextView
        android:id="@+id/tv_forget_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="修改密码"
        android:textColor="@color/text_black"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/et_username"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="32dp"
        android:background="@drawable/shape_edit_login_bg"
        android:hint="账号："
        android:paddingStart="16dp"
        android:textColor="@color/text_black"
        android:textColorHint="@color/text_gray_light"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_forget_title"
        tools:ignore="MissingConstraints" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/et_curr_pass"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="32dp"
        android:background="@drawable/shape_edit_login_bg"
        android:hint="当前密码："
        android:paddingStart="16dp"
        android:textColor="@color/text_black"
        android:textColorHint="@color/text_gray_light"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_username"
        tools:ignore="MissingConstraints" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/et_new_pass"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="32dp"
        android:background="@drawable/shape_edit_login_bg"
        android:hint="新密码："
        android:paddingStart="16dp"
        android:textColor="@color/text_black"
        android:textColorHint="@color/text_gray_light"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_curr_pass"
        tools:ignore="MissingConstraints" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/et_verify_pass"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="32dp"
        android:background="@drawable/shape_edit_login_bg"
        android:hint="确认密码："
        android:paddingStart="16dp"
        android:textColor="@color/text_black"
        android:textColorHint="@color/text_gray_light"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_new_pass"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/_tv_reset"
        android:layout_width="90dp"
        android:layout_height="32dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/shape_text_reset_red_bg"
        android:gravity="center"
        android:text="重置"
        android:textColor="@color/main"
        app:layout_constraintStart_toStartOf="@+id/et_verify_pass"
        app:layout_constraintTop_toBottomOf="@+id/et_verify_pass"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/tv_submit"
        android:layout_width="90dp"
        android:layout_height="32dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/shape_text_login_bg"
        android:gravity="center"
        android:text="确定"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="@+id/et_verify_pass"
        app:layout_constraintTop_toBottomOf="@+id/et_verify_pass"
        tools:ignore="MissingConstraints" />
</androidx.constraintlayout.widget.ConstraintLayout>