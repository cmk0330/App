<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/ic_user_photo_bg">

    <ImageView
        android:id="@+id/iv_user_photo"
        android:layout_width="108dp"
        android:layout_height="108dp"
        android:src="@mipmap/ic_user_photo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.33"
        tools:ignore="MissingConstraints" />

    <fragment
        android:id="@+id/fragment_login_regedit_state"
        android:name="androidx.navigation.fragment.NavHostFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        app:defaultNavHost="true"
        app:layout_constraintTop_toBottomOf="@+id/iv_user_photo"
        app:navGraph="@navigation/login_register_state"
        tools:ignore="MissingConstraints" />

</androidx.constraintlayout.widget.ConstraintLayout>